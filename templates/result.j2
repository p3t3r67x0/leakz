{% if result_list | length > 0 %} {% if result_type == 'hash' %}
<ul>
  {% for i in result_list %}
  <li class="bg-white rounded {% if result_list | length > 1 %}mb-4{% endif %}">
    <ul>
      <li class="px-2 py-1 bg-gray-700">
        <h3 class="text-2xl text-white break-all">{{ i['password'] }}</h3>
      </li>
      <li class="font-mono px-2 py-1">
        <b>md5:</b>
        <a href="/hash/{{ i['hash']['md5'] | lower }}" class="text-gray-700 break-all hover:text-blue-700">{{ i['hash']['md5'] | lower }}</a>
      </li>
      <li class="font-mono px-2 py-1">
        <b>sha1:</b>
        <a href="/hash/{{ i['hash']['sha1'] | lower }}" class="text-gray-700 break-all hover:text-blue-700">{{ i['hash']['sha1'] | lower }}</a>
      </li>
      <li class="font-mono px-2 py-1">
        <b>sha224:</b>
        <a href="/hash/{{ i['hash']['sha224'] | lower }}" class="text-gray-700 break-all hover:text-blue-700">{{ i['hash']['sha224'] | lower }}</a>
      </li>
      <li class="font-mono px-2 py-1">
        <b>sha256:</b>
        <a href="/hash/{{ i['hash']['sha256'] | lower }}" class="text-gray-700 break-all hover:text-blue-700">{{ i['hash']['sha256'] | lower }}</a>
      </li>
      <li class="font-mono px-2 py-1">
        <b>sha384:</b>
        <a href="/hash/{{ i['hash']['sha384'] | lower }}" class="text-gray-700 break-all hover:text-blue-700">{{ i['hash']['sha384'] | lower }}</a>
      </li>
      <li class="font-mono px-2 py-1">
        <b>sha512:</b>
        <a href="/hash/{{ i['hash']['sha512'] | lower }}" class="text-gray-700 break-all hover:text-blue-700">{{ i['hash']['sha512'] | lower }}</a>
      </li>
    </ul>
  </li>
  {% endfor %}
</ul>
{% elif result_type == 'mail' %}
<div class="w-full">
  <h3 class="ghost" style="margin-left: 40px">Ohhh noooo! Update your credentials.</h3>
  <img style="position: absolute; top: 12px; left: 12px" src="./unsafe.png" width="35" height="auto">
</div>
<div class="w-full">
  <ul class="list-unstyled">
    {% for i in result_list %}
    <li>
      <ul class="list-group">
        <li class="list-group-item nightmare">
          <h3>{{ i['mail'] }}</h3>
        </li>
        {% if i['leak'] %} {% for j in i['leak'] %}
        <li class="list-group-item waterfall">
          <b>Leaked:</b> {{ j }}
        </li>
        {% endfor %} {% endif %}
      </ul>
    </li>
    {% endfor %}
  </ul>
</div>
{% endif %} {% elif result_list | length == 0 and result_type == 'mail' %}
<div class="text-center w-full h2">
  <img src="./safe.png" width="250" height="auto">
</div>
{% endif %}
